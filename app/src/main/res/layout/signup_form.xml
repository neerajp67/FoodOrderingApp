<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etSignInName"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableStart="@drawable/ic_person"
            android:background="@drawable/user_credential_edittext_style"
            android:hint="Enter your name"
            android:gravity="center"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etSignInPhone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_android"
            android:background="@drawable/user_credential_edittext_style"
            android:gravity="center"
            android:ems="10"
            android:maxLength="10"
            android:hint="Enter your mobile number"
            android:inputType="phone"
            />
        <EditText
            android:id="@+id/etSignInEmail"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableStart="@drawable/ic_email"
            android:background="@drawable/user_credential_edittext_style"
            android:hint="Enter your email address"
            android:gravity="center"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/SignInMyPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_password"
            android:background="@drawable/user_credential_edittext_style"
            android:gravity="center"
            android:hint="Enter a password"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password"
            android:background="@drawable/user_credential_edittext_style"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/buttonSignUp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:onClick="SignUp"
            android:text="SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/createNewAccount"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:onClick="OpenLoginActivity"
            android:textColor="@color/red"
            android:text="Existing Customer? Click here to login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>






