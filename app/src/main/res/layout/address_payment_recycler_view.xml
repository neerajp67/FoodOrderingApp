<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/food_type_linear_layout">

    <TextView
        android:id="@+id/recently_used_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECENTLY USED"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neeraj Pandey"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/address_locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address1"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pithoragarh, Uttarakhand"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/address_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="262501"
        android:textSize="16sp"
        android:textColor="@color/black"/>

</LinearLayout>